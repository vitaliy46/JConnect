<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jabber.jconnect.MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:id="@+id/scroll_list_view" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/contact_list_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_list_header"
                android:padding="3dp"
                android:background="#464646"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="#ffffff" />

            <FrameLayout
                android:id="@+id/fragmentContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/muc_list_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/muc_list_header"
                android:padding="3dp"
                android:background="#464646"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="#ffffff" />

            <FrameLayout
                android:id="@+id/fragmentMucContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
